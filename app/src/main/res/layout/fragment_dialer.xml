<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootDialerScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">


    <!-- Green Call Button at Bottom -->
    <LinearLayout
        android:id="@+id/llNumberField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="7696729269"
            android:textAlignment="center"
            android:paddingLeft="17dp"
            android:textColor="@android:color/black"
            android:textSize="35sp" />

        <ImageButton
            android:id="@+id/btnBackspace"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Backspace"
            android:src="@drawable/ic_backspace" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/glDialPad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alignmentMode="alignBounds"
        android:columnCount="3"
        android:rowCount="4"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toTopOf="@id/btnCall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llNumberField"
        app:layout_constraintVertical_bias="0.692">

        <!-- Digits -->
        <Button
            android:id="@+id/btn1"
            style="@style/DialButton"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            style="@style/DialButton"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            style="@style/DialButton"
            android:text="3" />

        <Button
            android:id="@+id/btn4"
            style="@style/DialButton"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            style="@style/DialButton"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            style="@style/DialButton"
            android:text="6" />

        <Button
            android:id="@+id/btn7"
            style="@style/DialButton"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            style="@style/DialButton"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            style="@style/DialButton"
            android:text="9" />

        <Button
            android:id="@+id/btnStar"
            style="@style/DialButton"
            android:text="*" />

        <Button
            android:id="@+id/btn0"
            style="@style/DialButton"
            android:text="0" />

        <Button
            android:id="@+id/btnHash"
            style="@style/DialButton"
            android:text="#" />
    </GridLayout>

    <ImageButton
        android:id="@+id/btnCall"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_call"
        android:backgroundTint="@android:color/holo_green_dark"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"
        android:contentDescription="Call"/>
</androidx.constraintlayout.widget.ConstraintLayout>
